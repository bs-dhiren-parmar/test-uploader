{
    "name": "augmet-uploader",
    "version": "3.2.0",
    "description": "File Uploader for Augmet - React + TypeScript + Electron",
    "main": "main.js",
    "scripts": {
        "dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron . --dev --no-sandbox --disable-gpu\"",
        "build": "vite build",
        "start": "npm run build && electron . --no-sandbox",
        "preview": "vite preview",
        "generate-icons": "node scripts/generate-icons.js",
        "predist": "npm run generate-icons",
        "dist": "npm run build && electron-builder",
        "dist:win": "npm run generate-icons && npm run build && electron-builder --win",
        "dist:mac": "npm run generate-icons && npm run build && electron-builder --mac",
        "dist:linux": "npm run generate-icons && npm run build && electron-builder --linux",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json}\" \"*.{js,ts,json,html}\""
    },
    "keywords": [
        "electron",
        "react",
        "typescript",
        "augmet",
        "uploader"
    ],
    "license": "MIT",
    "author": "Augmet",
    "homepage": "https://augmet.ai",
    "repository": {
        "type": "git",
        "url": "https://github.com/bs-dhiren-parmar/test-uploader"
    },
    "build": {
        "appId": "com.augmet.uploader",
        "productName": "Augmet Uploader",
        "directories": {
            "output": "release",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js",
            "package.json"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icon.ico"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "build/icon.icns",
            "category": "public.app-category.utilities"
        },
        "linux": {
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "executableName": "augmet-uploader",
            "artifactName": "${name}-${version}-${arch}.${ext}",
            "icon": "build/icons",
            "category": "Utility",
            "maintainer": "developer@example.com"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "concurrently": "^9.2.1",
        "electron": "^28.0.0",
        "electron-builder": "^25.1.8",
        "prettier": "^3.4.2",
        "semantic-release": "^24.0.0",
        "sharp": "^0.33.5",
        "typescript": "^5.9.3",
        "vite": "^7.2.7",
        "wait-on": "^9.0.3"
    },
    "dependencies": {
        "axios": "^1.13.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-router-dom": "^7.10.1",
        "react-select": "^5.10.2",
        "react-select-async-paginate": "^0.7.11",
        "yup": "^1.7.1"
    }
}
